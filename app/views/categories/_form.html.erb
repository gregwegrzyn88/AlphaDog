<%= render 'shared/errors', obj: @category, message: message_type, type: "category" %>

<%= form_for @category do |f| %>
	<div class="form-group row">
		<div class="col-form-label col-sm-2">
			<%= f.label :name %>
		</div>
		<div class="col-sm-8">
			<%= f.text_field :name, class: "form-control", placeholder: "Category Name", autofocus: true %>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-form-label col-sm-2">
			<%= f.label :description %>
		</div>
		<div class="col-sm-8">
			<%= f.text_area :description, rows: 2, class: "form-control", placeholder: "Category Description" %>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-sm-10">
			<%= f.submit class: "btn btn-primary btn-lg" %>
		</div>
	</div>
<% end %>
<p><%= link_to "Return to Category Listing", categories_path %></p>