<%= render 'shared/errors', obj: @article, message: message_type, type: "article" %>

<%= form_for @article do |f| %>
	<div class="form-group row">
		<div class="col-form-label col-sm-2">
			<%= f.label :title %>
		</div>
		<div class="col-sm-8">
			<%= f.text_field :title, class: "form-control", placeholder: "Article Title", autofocus: true %>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-form-label col-sm-2">
			<%= f.label :description %>
		</div>
		<div class="col-sm-8">
			<%= f.text_area :description, rows: 12, class: "form-control", placeholder: "Article Content" %>
		</div>
	</div>

	<div class="form-group form-inline">
		<%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
			<div class="custom-control custom-checkbox my-1 mr-sm-2">
				<%= cb.check_box(class: "custom-control-input checkbox-box-adjust") %>
				<%= cb.label(class: "custom-control-label checkbox-label-adjust") %>
			</div>
		<% end %>
	</div>

	<div class="form-group row">
		<div class="col-sm-12 center">
			<%= f.submit class: "btn btn-primary btn-lg" %>
		</div>
	</div>
<% end %>
<p class="center"><%= link_to "Return to Article Listing", articles_path %></p>