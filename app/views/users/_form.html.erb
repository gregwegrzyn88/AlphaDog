<%= render 'shared/errors', obj: @user, message: message_type, type: "user" %>

<%= form_for @user do |f| %>
	<div class="form-group row">
		<div class="col-form-label col-sm-2">
			<%= f.label :username %>
		</div>
		<div class="col-sm-8">
			<%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-form-label col-sm-2">
			<%= f.label :email %>
		</div>
		<div class="col-sm-8">
			<%= f.email_field :email, class: "form-control", placeholder: "Enter Email Address" %>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-form-label col-sm-2">
			<%= f.label :password %>
		</div>
		<div class="col-sm-8">
			<%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-sm-10">
			<%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-primary btn-lg") %>
		</div>
	</div>
<% end %>
<p><%= link_to "Return to Article Listing", articles_path %></p>