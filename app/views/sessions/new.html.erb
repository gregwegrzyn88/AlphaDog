<h1 class="action-heading">Login</h1>

<%= form_for(:session, url: login_path) do |f| %>
	<div class="form-group row">
		<div class="col-form-label col-sm-2">
			<%= f.label :email %>
		</div>
		<div class="col-sm-8">
			<%= f.email_field :email, class: "form-control", placeholder: "Enter Email Address", autofocus: true %>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-form-label col-sm-2">
			<%= f.label :password %>
		</div>
		<div class="col-sm-8">
			<%= f.password_field :password, class: "form-control", placeholder: "Enter Password", autocomplete: "off" %>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-sm-10">
			<%= f.submit("Login", class: "btn btn-primary btn-lg") %>
		</div>
	</div>
<% end %>
<p><%= link_to "Return to Article Listing", articles_path %></p>